<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>LitF_BloodNursery</defName>
    <label>BloodNursery</label>
    <description>It is a pulsating nursery. By dedicating a LittleFairy and the appropriate organisms, the nursery will produce a few LittleFairies over time. As the research progresses and more organisms are dedicated, the nursery will grow. The stronger the nursery grows, the stronger the LittleFairy will be. The inclusion of another species may produce a LittleFairy with the abilities of that race.\n\n[note]\nRarely, a poorly made Meefae is born.</description>
    <thingClass>LittleFairy_Race.Thing_BloodNursery</thingClass>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <selectable>true</selectable>
    <fillPercent>0.20</fillPercent>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <rotatable>false</rotatable>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <costList>
      <LitF_Richmeat>15</LitF_Richmeat>
      <LitF_BrillianceWood>20</LitF_BrillianceWood>
    </costList>
    <statBases>
      <MaxHitPoints>2000</MaxHitPoints>
      <Mass>50</Mass>
      <Flammability>1.0</Flammability>
      <MarketValue>100</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>4</glowRadius>
        <glowColor>(200,100,100,50)</glowColor>
      </li>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <graphicData>
      <texPath>LittleFairy/Build/Meat/BloodNursery/BloodNursery</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <designationCategory>LitF_Building</designationCategory>
    <researchPrerequisites>
      <li>LitF_BloodNursery</li>
    </researchPrerequisites>
  </ThingDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>LitF_MeatLamp</defName>
    <label>LitF MeatLamp</label>
    <description>It is a shining rump of meat. The light is faint, but it glows permanently.</description>
    <thingClass>Building</thingClass>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <selectable>true</selectable>
    <fillPercent>0.20</fillPercent>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <rotatable>false</rotatable>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <costList>
      <LitF_Richmeat>10</LitF_Richmeat>
      <LitF_BrillianceWood>30</LitF_BrillianceWood>
    </costList>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>2</Mass>
      <Flammability>0.25</Flammability>
      <MarketValue>100</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>7</glowRadius>
        <glowColor>(200,100,100,50)</glowColor>
      </li>
    </comps>
    <graphicData>
      <texPath>LittleFairy/Build/Meat/MeatLamp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
        <offset>(0,0,-0.1)</offset>
      </shadowData>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
