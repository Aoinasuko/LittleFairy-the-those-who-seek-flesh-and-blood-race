  </ThingDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>LitF_MeatTable</defName>
    <label>LitF MeatTable</label>
    <description>People eat off tables when chairs are placed facing them.</description>
    <thingClass>Building</thingClass>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <pathCost>42</pathCost>
    <fillPercent>0.4</fillPercent>
    <socialPropernessMatters>true</socialPropernessMatters>
    <canOverlapZones>false</canOverlapZones>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <surfaceType>Eat</surfaceType>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <costList>
      <LitF_Richmeat>5</LitF_Richmeat>
    </costList>
    <graphicData>
      <texPath>LittleFairy/Build/Meat/MeatTable</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <uiIconScale>0.8</uiIconScale>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>1500</WorkToBuild>
      <Mass>10</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>1</Beauty>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">10</StyleDominance>
    </statBases>
    <size>(1,1)</size>
    <rotatable>false</rotatable>
    <designationCategory>LitF_Building</designationCategory>
    <researchPrerequisites>
      <li>LitF_MeatFurniture</li>
    </researchPrerequisites>
  </ThingDef>
  
  <ThingDef ParentName="BenchBase">
    <defName>LitF_ButcherTable</defName>
    <label>LitF ButcherTable</label>
    <description>A compact workbench for efficient butchery of corpses.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>LittleFairy/Build/Meat/ButcherTable</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1,1)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <costList>
      <Steel>50</Steel>
      <LitF_Richmeat>10</LitF_Richmeat>
    </costList>
    <researchPrerequisites>
      <li>LitF_MeatFurniture</li>
    </researchPrerequisites>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>2500</WorkToBuild>
      <MaxHitPoints>300</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-5</Cleanliness>
      <WorkTableEfficiencyFactor>1.2</WorkTableEfficiencyFactor>
    </statBases>
    <size>(1,1)</size>
    <designationCategory>LitF_Building</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes>
      <li>ButcherCorpseFlesh</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
  </ThingDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>LitF_MeatWall</defName>
    <label>LitF MeatWall</label>
    <description>It is a wall with some resistance to explosions.</description>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <graphicData>
      <texPath>LittleFairy/Build/Meat/MeatWall</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>CornerFiller</linkType>
      <linkFlags>
        <li>Wall</li>
        <li>Rock</li>
      </linkFlags>
    </graphicData>
    <uiIconPath>LittleFairy/Build/Meat/MeatWall_Icon</uiIconPath>
    <statBases>
      <MaxHitPoints>600</MaxHitPoints>
      <WorkToBuild>135</WorkToBuild>
      <Flammability>1.0</Flammability>
      <MeditationFocusStrength>0.22</MeditationFocusStrength>
    </statBases>
    <costList>
      <LitF_Richmeat>1</LitF_Richmeat>
    </costList>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <coversFloor>true</coversFloor>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <tickerType>Never</tickerType>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <holdsRoof>true</holdsRoof>
    <designationCategory>LitF_Building</designationCategory>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <fertility>0</fertility>
    <building>
      <isInert>true</isInert>
      <isPlaceOverableWall>true</isPlaceOverableWall>
      <ai_chillDestination>false</ai_chillDestination>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/Wall_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
      <relatedBuildCommands>
        <li>Door</li>
        <li>Autodoor</li>
      </relatedBuildCommands>
    </building>
    <comps>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Minimal</li>
        </focusTypes>
      </li>
    </comps>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>0.5</multiplier>
      </li>
      <li>
        <damageDef>Thump</damageDef>
        <multiplier>0.5</multiplier>
      </li>
    </damageMultipliers>
    <researchPrerequisites>
      <li>LitF_MeatFurniture</li>
    </researchPrerequisites>
  </ThingDef>

</Defs>