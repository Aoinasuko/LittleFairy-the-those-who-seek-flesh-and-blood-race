<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef ParentName="FactionBase">
    <defName>LitF_BloodyWildLittleFairy</defName>
    <label>Wild LittleFairy</label>
    <description>This group of LittleFairy was born as a result of having forgotten their consciousness as a service tribe over a long, long period of time and having learned to taste the flesh of another race. They see other races only as food and material for their prosperity, and attack them indiscriminately. It is impossible to persuade them as a faction, but individual little faeries can be persuaded over time.</description>
    <colorSpectrum>
      <li>(0.78, 0, 0.27)</li>
      <li>(1, 0.74, 0.83)</li>
    </colorSpectrum>
    <permanentEnemy>true</permanentEnemy>
    <pawnSingular>Wild Bloody LittleFairy</pawnSingular>
    <pawnsPlural>Wild Bloody LittleFairies</pawnsPlural>
    <mustStartOneEnemy>false</mustStartOneEnemy>
    <settlementGenerationWeight>0.5</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxCountAtGameStart>1</maxCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>false</canSiege>
    <canStageAttacks>false</canStageAttacks>
    <rescueesCanJoin>false</rescueesCanJoin>
    <autoFlee>false</autoFlee>
    <geneticVariance>1</geneticVariance>
    <classicIdeo>false</classicIdeo>
    <factionIconPath>LittleFairy/UI/Faction/icon</factionIconPath>
    <techLevel>Neolithic</techLevel>
    <factionNameMaker>NamerFactionTribal</factionNameMaker>
    <allowedCultures><li MayRequire="Ludeon.RimWorld.Ideology">LitF_Culture</li></allowedCultures>
    <requiredMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">LitF_Fairy</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
    </requiredMemes>
    <allowedMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">LitF_Fairy</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
    </allowedMemes>
    <structureMemeWeights>
      <Structure_Animist MayRequire="Ludeon.RimWorld.Ideology">10</Structure_Animist>
    </structureMemeWeights>
    <backstoryFilters>
      <li>
        <categories>
          <li>LitF_FairyStory_Wild</li>
        </categories>
      </li>
    </backstoryFilters>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <LittleFairy_Wild>10</LittleFairy_Wild>
        </options>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <commonality>100</commonality>
        <options>
          <LittleFairy_Wild>10</LittleFairy_Wild>
          <LitF_Meefae>3</LitF_Meefae>
        </options>
      </li>
    </pawnGroupMakers>
    <earliestRaidDays>45</earliestRaidDays>
    <settlementTexturePath>LittleFairy/UI/Faction/icon</settlementTexturePath>
  </FactionDef>

  <FactionDef ParentName="FactionBase">
    <defName>LitF_GentleWildLittleFairy</defName>
    <label>Wild LittleFairy</label>
    <description>LittleFairy herd. There are many factors, such as having once been used by a different species, or having been separated from their master.</description>
    <colorSpectrum>
      <li>(0, 1, 0.6)</li>
      <li>(0, 0.9, 0.8)</li>
    </colorSpectrum>
    <pawnSingular>Wild LittleFairy</pawnSingular>
    <pawnsPlural>Wild LittleFairies</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <mustStartOneEnemy>false</mustStartOneEnemy>
    <maxCountAtGameStart>1</maxCountAtGameStart>
    <hidden>true</hidden>
    <rescueesCanJoin>true</rescueesCanJoin>
    <autoFlee>false</autoFlee>
    <geneticVariance>1</geneticVariance>
    <classicIdeo>false</classicIdeo>
    <factionIconPath>LittleFairy/UI/Faction/icon</factionIconPath>
    <techLevel>Neolithic</techLevel>
    <factionNameMaker>NamerFactionTribal</factionNameMaker>
    <allowedCultures>
      <li MayRequire="Ludeon.RimWorld.Ideology">LitF_Culture</li>
    </allowedCultures>
    <requiredMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">LitF_Fairy</li>
    </requiredMemes>
    <allowedMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">LitF_Fairy</li>
    </allowedMemes>
    <structureMemeWeights>
      <Structure_Animist MayRequire="Ludeon.RimWorld.Ideology">10</Structure_Animist>
    </structureMemeWeights>
    <backstoryFilters>
      <li>
        <categories>
          <li>LitF_FairyStory_Wild</li>
          <li>LitF_FairyStory_Slave</li>
        </categories>
      </li>
    </backstoryFilters>
    <settlementTexturePath>LittleFairy/UI/Faction/icon</settlementTexturePath>
  </FactionDef>

</Defs>