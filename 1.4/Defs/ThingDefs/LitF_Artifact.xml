    <useHitPoints>true</useHitPoints>
    <costList>
      <LitF_Richmeat>20</LitF_Richmeat>
      <LitF_BrillianceWood>100</LitF_BrillianceWood>
      <LitF_BloodyBrillianceWood>100</LitF_BloodyBrillianceWood>
