  <RecipeDef ParentName="LitF_CookMealBase">
    <defName>LitF_CookRichmeat</defName>
    <label>Cook LitF Richmeat</label>
    <description>Make a little fairy favorite, rich meat.</description>
    <jobString>Cooking LitF rich meat</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <researchPrerequisite>LitF_Knowledge</researchPrerequisite>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
          </categories>
        </filter>
        <count>0.35</count>
      </li>
    </ingredients>
    <products>
      <LitF_Richmeat>1</LitF_Richmeat>
    </products>
    <workSkill>Cooking</workSkill>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
      <li>Campfire</li>
    </recipeUsers>
  </RecipeDef>

